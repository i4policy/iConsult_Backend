{
  "db": {
    "name": "db",
    "connector": "memory"
  },
  "mongo": {
    "host": "${DB_HOST}",
    "port": "${DB_PORT}",
    "url": "${DB_URI}",
    "database": "${DB}",
    "password": "${DB_PASSWORD}",
    "name": "mongo",
    "user": "${DB_USER}",
    "connector": "mongodb"
  },
  "postmark": {
    "name": "postmark",
    "connector": "mail",
    "transports": [
      {
        "type": "smtp",
        "host": "${EMAIL_HOST}",
        "secure": false,
        "port": "${EMAIL_PORT}",
        "auth": {
          "user": "${EMAIL_USER}",
          "pass": "${EMAIL_PASSWORD}"
        }
      }
    ]
  }
}
