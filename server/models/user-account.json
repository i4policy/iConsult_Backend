{
  "name": "UserAccount",
  "plural": "users",
  "base": "User",
  "idInjection": true,
  "indexes": {
    "uniqueEmail": {
      "keys": {
        "email": 1
      },
      "options": {
        "unique": true
      }
    }
  },
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": true,
    "DisableMethods": {
      "expose": [
        "find",
        "create",
        "changePassword",
        "registerUser",
        "registerAdminUser",
        "facebookLogin",
        "googleLogin",
        "twitterLogin"
      ],
      "hide": [
        "reset",
        "reset-password",
        "replaceById",
        "confirm",
        "verifyById"
      ]
    }
  },
  "properties": {
    "phone_number": {
      "type": "string"
    },
    "facebookID": {
      "type": "string"
    },
    "googleID": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "accessTokens": {
      "type": "hasMany",
      "model": "CustomAccessToken",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    },
    "userRole": {
      "type": "belongsTo",
      "model": "UserRole",
      "foreignKey": ""
    },
    "userAccounts": {
      "type": "hasMany",
      "model": "UserAccount",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW",
      "property": "registerUser"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW",
      "property": "facebookLogin"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW",
      "property": "googleLogin"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW",
      "property": "twitterLogin"
    }
  ],
  "methods": {}
}
